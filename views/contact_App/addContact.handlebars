
    <h1 style="text-align: center;">Add a Contact</h1>
    <div class="page-container">
      
     <form action="/api/addContact" method="post">
        <fieldset>
            <legend>Contact Information</legend>
            
            <!-- First Name -->
            <label for="fname">First Name:</label>
            <input type="text" name="fname" id="fname" placeholder="Enter first name" required>
            
            <!-- Last Name -->
            <label for="lname">Last Name:</label>
            <input type="text" name="lname" id="lname" placeholder="Enter last name" required>
            <!-- Mobile -->
            <label for="mobile">Mobile:</label>
            <input type="tel"   pattern="[0-9]{10}" name="num" id="mobile" placeholder="Enter mobile number" required>
            
            <!-- Options -->
            <label for="options">Choose an Location:</label>
            <select id="options" name="loc" required>
              <option value="" disabled selected>Select Category</option>
                <option value="mobile">Mobile</option>
                <option value="sim">SIM</option>
                <option value="email">Mail</option>
            </select>
              <button type="submit">Submit</button>
        </fieldset>
        
        <!-- Submit Button -->
      
    </form>
</div>

   